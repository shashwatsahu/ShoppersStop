<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/help_support_cv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/customer_profile_card_view_height"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/default_padding">

            <ImageView
                android:id="@+id/help_support"
                android:layout_width="@dimen/icon_profile_height_width"
                android:layout_height="@dimen/icon_profile_height_width"
                android:src="@drawable/ic_support"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_and_support"
                android:textColor="@color/text_color_for_options"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/text_size_for_profile_card_view"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/help_support"
                android:layout_marginLeft="@dimen/margin_left_between_elements"
                />


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>